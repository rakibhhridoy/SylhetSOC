                'Vegetation Area Change (m²)', 'SOC%_1985', 'Stock_1985', 'pH_1985', 'TN_1985', 
                'SBD_1985', 'CEC_1985', 'Clay_1985']]

df25 = hydro_veg[['Water Area Change (m²)', 'Flood Area Change (m²)', 'Urban Area Change (m²)', 
                'Vegetation Area Change (m²)', 'SOC%_2025', 'pH_2025', 'TN_2025', 
